{
  "name": "weather-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "weather",
    "forecast",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "Weather forecast service using Weather.gov API",
  "dependencies": {
    "cors": "2.8.5",
    "express": "5.1.0",
    "p-retry": "7.1.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.7.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  }
}
