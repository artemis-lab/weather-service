{
  "name": "weather-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "NODE_ENV=development node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run test/integration",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run test/unit",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --project tsconfig.test.json --noEmit"
  },
  "keywords": [
    "weather",
    "forecast",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "Weather service using Weather.gov API",
  "dependencies": {
    "cors": "2.8.5",
    "express": "5.1.0",
    "p-retry": "7.1.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/node": "24.10.1",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "4.0.14",
    "eslint": "9.39.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "prettier": "3.7.2",
    "supertest": "7.1.4",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vitest": "4.0.14"
  }
}
